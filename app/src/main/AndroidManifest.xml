<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybudget">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.MyApp">
        <meta-data
            android:name="com.google.firebase.database.FirebaseDatabase"
            android:value="true" />
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register other activities -->
        <activity android:name=".RegisterActivity" />
        <activity android:name=".IncomeActivity" />
        <activity android:name=".ExpenseActivity" />
        <activity android:name=".TransactionHistoryActivity" />
        <activity android:name=".SetBudgetActivity" />
    </application>

</manifest>
